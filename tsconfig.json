{
    "compilerOptions": {
        "outDir": "./dist",
        "module": "commonjs",
        "target": "es2019",
        "lib": [
            "es2019"
        ],
        "esModuleInterop": true,
        "allowJs": true,
        "sourceMap": true,
        "baseUrl": "src",
        "rootDirs": [
            "src","test"
        ],
        "paths": {
            "@/*": ["*"]
        },
    },
    "include": [
        "src",
        "test"
    ]
}